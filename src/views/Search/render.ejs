<%- include('../shared/header'); %>
<%- include('./form'); %>

<section class="container-fluid" style="margin-top: 100px; ">

    <div class="col-12 col-sm-6 col-md-2 col-lg-3">
         <% for(var i=0; i<books.length - 1; i++) 
         {%>

        <div class="card">
           <div class="bg-image hover-zoom ripple ripple-surface ripple-surface-light" data-mdb-ripple-color="light">
              <img src='http://books.google.com/books/content?id=<%=books[i].id%>&printsec=frontcover&img=1&zoom=5&edge=curl&source=gbs_api' class="w-100 img-fluid imgCardList imgModal" />
              <a>
                 <div class="mask" style="background-color: hsla(0, 0%, 0%, 0.2) !important;">
                    <div class="d-flex justify-content-start align-items-end h-100">
                       <h5><span class="badge ms-2" style="background-color: #463754"></span></h5>
                    </div>
                 </div>
                 <div class="hover-overlay">
                    <div class="mask" style="background-color: rgba(251, 251, 251, 0.10);"></div>
                 </div>
              </a>
           </div>
           <div class="card-body">
              <div class="text-reset">
                 <h6 class="card-title mb-3"><%= books[i].volumeInfo.title %></h6>
              </div>
              <a class="text-reset">
                 <p></p>
              </a> 
     
              <button type="button" class="btn btn-info" onclick="openModal('${img}', '${title}', '${price}', 'a')" style="background-color: #463754"
                 data-bs-toggle="modal" data-bs-target="#modalPrice" id="#modalPrice">
                 <%= books[i].volumeInfo.author %>
              </button>
     
           </div>
        </div>
        <% } %>
    </section>

<%- include('../Shared/footer'); %>